Bootstrap: docker
From: mambaorg/micromamba:1.5.8

%labels
  org.opencontainers.image.title "nanoasv"
  maintainer "richlab"

%files
  nanoasv.environment.yml /tmp/environment.yml

%post
  micromamba install -y -n base -f /tmp/environment.yml
  micromamba clean -a -y

%environment
  export PATH=/opt/conda/bin:$PATH

%runscript
  exec "$@"